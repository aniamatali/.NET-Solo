@model IEnumerable<Gummi.Models.Category>

@{
    ViewData["Title"] = "Category";
}

<div class="contentbackground">
<h3>Categories</h3>

<table class="table table-sm table-hover table-dark">
    <tr>
        <th>
            Merchandise
        </th>
        <th></th>
    </tr>

    @foreach (var listCategory in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelCategory => listCategory.Name)
            </td>
            <td class="cellright">
                @Html.ActionLink("Edit", "Edit", new { id = listCategory.CategoryId }) |
                @Html.ActionLink("Details", "Details", new { id = listCategory.CategoryId }) |
                @Html.ActionLink("Delete", "Delete", new { id = listCategory.CategoryId })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("New Category", "Create")
</p>
</div>
